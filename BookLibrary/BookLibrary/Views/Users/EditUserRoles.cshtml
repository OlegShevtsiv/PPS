@using Microsoft.AspNetCore.Identity
@model BookLibrary.ViewModels.ChangeRoleViewModel
@{
    ViewData["Title"] = "Changing user roles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Changing roles for user @Model.UserEmail</h2>

<form asp-action="EditUserRoles" method="post">
    <input type="hidden" name="userId" value="@Model.UserId" />
    <div class="form-group">
        @foreach (IdentityRole role in Model.AllRoles)
        {
            <input type="checkbox" name="roles" value="@role.Name"
                   @(Model.UserRoles.Contains(role.Name) ? "checked=\"checked\"" : "") />@role.Name <br />
            }
    </div>
    <button type="submit" class="btn btn-success">Save</button>
</form>