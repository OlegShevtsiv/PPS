@using Services.Interfaces;
@model Services.DTO.BookDTO
@{
    ViewData["Title"] = "Get book info";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@inject IAuthorService authorService
<div class="container pt-3 pb-4">
    <div class="row py-5">
        <div class="col-12 col-md-5 col-lg-4 d-flex flex-column pt-3">
            <img class="card-img-top w-100" alt="@Model.Title" style="width:240px; height:300px;" src="data:image/jpeg;base64,@(Convert.ToBase64String(@Model.Image))" />
            <div class="book_desc">
                <div class="h4">Author</div>
                <div class="h4 text-secondary">
                    <a asp-action="GetAuthorInfo" asp-route-id="@authorService.Get(Model.AuthorId).Id">@authorService.Get(Model.AuthorId).Name @authorService.Get(Model.AuthorId).Surname</a>
                </div>
                
                <div class="h4">Genre</div>
                <div class="h5 text-secondary">@Model.Genre</div>
                <div class="h4">Rate</div>
                <div class="h5 text-secondary">@Model.Rate</div>
                <div class="h4">Rates amount</div>
                <div class="h5 text-secondary">@Model.RatesAmount</div>

                <form asp-action="RateBook" asp-controller="Home" method="post">
                    <div class="form-group">
                        <input type="hidden" asp-for="Id" />
                    </div>
                    <div class="form-group">
                        <select type="number" asp-for="Rate" class="form-control" style="width: 100px">
                            @for (int i = 1; i <= 5; i++)
                            {
                                <option value="@i">@i</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <input type="submit" onClick="this.style.visibility= 'hidden';" value="Rate Book" class="btn btn-success" />
                    </div>
                </form>
            </div>
        </div>
        <div class="col-12 col-md-7 col-lg-8 d-flex flex-column pt-3">
            <h1>@Model.Title</h1>
            @if (Model.FileBook == null)
            {<p>qwerty</p>}
            <a asp-action="DownloadBook" asp-route-id="@Model.Id">Download</a>
            <div class="h2">Description</div>
            <p class="text-secondary">@Model.Description</p>

