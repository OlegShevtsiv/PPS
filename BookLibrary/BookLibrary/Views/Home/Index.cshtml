@using Services.Interfaces;
@model IEnumerable<Services.DTO.BookDTO>
@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@inject IAuthorService authorService
<div class="container">
    <div class="row">
        <div class="col-12 mt-5">
            <form asp-action="Search" asp-controller="Home" class="form-inline d-flex flex-nowrap">
                <div class="form-group col-6 col-md-9 d-flex flex-nowrap pl-md-0">
                    <input type="text"  class="form-control border-primary w-100 h1 my-0 form-control-lg" id="bookSearch" placeholder="Search book" name="req">
                </div>
                <button type="submit" class="btn btn-primary btn-lg col-6 col-md-3 pr-md-0">Search</button>
            </form>
        </div>
        @*<div class="col-12 text-center mt-5">
            <a href="#" class="btn btn-primary text-uppercase">Top books Authors Genres Wishlist</a>
        </div>*@
    </div>
</div>
<div class="container">
        <div class="row">
            <div class="col-12 text-center">
                <h1 class="mt-3 mb-4">All Releases</h1>
            </div>
            @foreach (var book in Model)
            {
                <div class="col-12 col-md-6 col-lg-3">
                    <div class="card">
                        @if (book.Image != null)
                        {
                            <img class="card-img-top" @*style="width:120px; height:150px;"*@ src="data:image/jpeg;base64,@(Convert.ToBase64String(book.Image))" />
                        }
                    <div class="card-body">
                        <span class="card-title h3 d-block mt-1 mb-2">"@book.Title"</span>
                        
                            <span class="card-title h4 d-block mt-1 mb-2">Author: <a asp-action="GetAuthorInfo" asp-route-id="@authorService.Get(book.AuthorId).Id">@authorService.Get(book.AuthorId).Name @authorService.Get(book.AuthorId).Surname</a></span>
                        
                            <hr />
                            <span class="card-title h4 d-block mt-1 mb-2">Release year: @book.Year</span>
                            <span class="card-title h4 d-block mt-1 mb-2">Rating: @book.Rate / 5</span>
                            <a class="btn btn-lg btn-primary mt-3" asp-action="GetBookInfo" asp-route-id="@book.Id">More</a>
                    </div>
                    </div>

                </div>
            }
        </div>
</div>