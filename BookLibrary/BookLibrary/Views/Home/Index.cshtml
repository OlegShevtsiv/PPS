@model IEnumerable<Services.DTO.BookDTO>
@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row flex-column justify-content-between py-5">
        <div class="col-12 mt-5">
            <form asp-action="Search" class="d-flex justify-content-between">
                <div class="form-group w-100 px-0 my-0 col-lg-6">
                    <input type="text" class="form-control w-100 rounded-0 rounded-left border-primary" id="exampleInputEmail1" aria-describedby="emailHelp">
                </div>
                <div class="col-lg-2">
                     <button type="submit" class="btn btn-primary rounded-0 rounded-right">Search</button>
                </div>
            </form>
        </div>
        @*<div class="col-12 text-center mt-5">
            <a href="#" class="btn btn-primary text-uppercase">Top books Authors Genres Wishlist</a>
        </div>*@
    </div>
</div>
<div class="container">
        <div class="row">
            <div class="col-12 text-center">
                <h2>All Releases</h2>
            </div>
            @foreach (var book in Model)
            {
                <div class="col-12 col-md-6 col-lg-3">
                    <div class="card text-center">
                        @if (book.Image != null)
                        {

                            <img class="card-img-top" style="width:80px; height:100px;" src="data:image/jpeg;base64,@(Convert.ToBase64String(book.Image))" />
                        }
                        <div class="card-body">
                            <h5 class="card-title">@book.Title</h5>
                            <h6 class="card-title">Release: @book.Year</h6>
                            <h6 class="card-title">Rate: @book.Rate</h6>
                            <a class="btn btn-sm btn-primary" asp-action="GetBookInfo" asp-route-id="@book.Id">More</a>
                        </div>
                    </div>
                </div>
            }
        </div>
</div>