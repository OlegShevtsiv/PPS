@model Services.DTO.AuthorDTO
@{
    ViewData["Title"] = "Add author";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Adding new author</h2>
<form asp-action="AddAuthor" asp-controller="ManageLibrary"  method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label class="control-label">Name</label>
        <input type="text" asp-for="Name" class="form-control" required />
    </div>
    <div class="form-group">
        <label class="control-label">Surname</label>
        <input type="text" asp-for="Surname" class="form-control" required/>
    </div>
    <div class="form-group">
        <label class="control-label">Description</label>
        <textarea type="text" asp-for="Description" class="form-control" required></textarea>
    </div>
    <div class="form-group">
        <input type="submit" value="Add author" class="btn btn-success" />
    </div>
</form>

