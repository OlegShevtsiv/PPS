@model BookLibrary.ViewModels.ManageLibrary.AddAuthorViewModel
@{
    ViewData["Title"] = "Add author";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Adding new author</h2>
<form asp-action="AddAuthor" asp-controller="ManageLibrary"  method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Surname" class="control-label"></label>
        <input type="text" asp-for="Surname" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea type="text" asp-for="Description" class="form-control" ></textarea>
    </div>
    <div class="form-group">
        <input type="submit" value="Add author" class="btn btn-success" />
    </div>
</form>

