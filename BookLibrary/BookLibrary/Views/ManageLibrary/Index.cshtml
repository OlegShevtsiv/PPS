@model IEnumerable<Services.DTO.BookDTO>
@{
    ViewData["Title"] = "Books list";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Books List</h2>
<a class="btn btn-sm btn-success" asp-action="AddBook">Add book</a>
<a asp-action="AuthorsList">Authors list</a>
<table class="table">
    <tr><th>Title</th><th>Year</th><th></th></tr>
    @foreach (var book in Model)
    {
        <tr>
            <td>@book.Title</td>
            <td>@book.Year</td>
            <td>
                <form asp-action="DeleteBook" asp-route-id="@book.Id" method="post">
                    <a class="btn btn-sm btn-primary" asp-action="EditBook" asp-route-id="@book.Id">Edit</a>
                    <button type="submit" class="btn btn-sm btn-danger">
                        Delete
                    </button>
                </form>
            </td> 
        </tr>
    }
</table>




