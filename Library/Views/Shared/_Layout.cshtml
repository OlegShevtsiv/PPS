<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"] - Book Library</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>
<body>

    <header class="container py-3 position-fixed fixed-top" style="background-color: #a7e9fb">
        <div class="row">
            <div class="col-12 d-flex justify-content-end">
                <div class="navbar-header">
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">Book Library</a>
                </div>

                @*<ul class="nav">
                        <li class="nav-item">
                            <a class="nav-link" href="#">Login SomeUser</a>
                        </li>
                    </ul>*@

                <partial name="_LoginPartial" />

            </div>
        </div>
    </header>

    <partial name="_CookieConsentPartial" />

    <div class="content">
        @RenderBody()
    </div>
    <div class="container body-content">
        <hr />
        <footer>
            <p>&copy; 2019 - Library. Created by: Oleg Sigunov, Oleg Shevtsiv, Sergiy Matveev, Myhailo Dzura</p>
        </footer>
    </div>
</body>
</html>
